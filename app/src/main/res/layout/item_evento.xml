<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/tam2"
    android:padding="@dimen/margen5"
    android:background="@drawable/shape_boton">

    <TextView
        android:id="@+id/tvEventoHora"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margen2"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@color/rosa1"
        android:textSize="@dimen/tamtexto1"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvEventoAM"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margen2"
        android:text="A.M"
        android:textAlignment="center"
        android:textColor="@color/rosa1"
        android:textSize="@dimen/tamtexto1"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="@+id/tvEventoHora"
        app:layout_constraintTop_toBottomOf="@+id/tvEventoHora"
        />
    <TextView
        android:id="@+id/tvTituloEvento"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margen2"
        android:text="@string/strTituloEvento"
        android:textAlignment="center"
        android:textSize="@dimen/tamtexto1"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margen5"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvEventoHora"
        ></TextView>
    <TextView
        android:id="@+id/tvCategoriaEvento"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margen2"
        android:text="@string/strCategoriaEvento"
        android:textSize="@dimen/tamtexto1"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloEvento"
        app:layout_constraintLeft_toLeftOf="@+id/tvTituloEvento"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>